@using NZBDash.Resources
<ul class="nav navbar-nav navbar-right">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-user"></span>
            <strong>@User.Identity.Name</strong>
            <span class="glyphicon glyphicon-chevron-down"></span>
        </a>
        @if (User.Identity.IsAuthenticated)
        {
            <ul class="dropdown-menu">
                <li>
                    <div class="navbar-login">
                        <div class="row">
                            <div class="col-lg-12">
                                <p class="text-left">
                                    <strong>@User.Identity.Name</strong>
                                </p>
                                <p class="text-left">
                                    <a href="#" class="btn btn-primary btn-block btn-sm">@Resources.Views_Shared_NavUser_Account</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="divider"></li>
                <li>
                    <div class="navbar-login navbar-login-session">
                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <input href="#" type="submit" value="@Resources.Views_Shared_NavUser_Logout" class="btn btn-danger btn-block"/> 
                                    }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
        }
        else
        {
            <ul class="dropdown-menu">
                <li>
                    <div class="navbar-login-session">
                        <div class="row">
                            <div class="col-lg-12">
                                <p>
                                    <a href="@Url.Action("Login","Account")" class="btn btn-success btn-block">@Resources.Views_Shared_NavUser_Login</a> 
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        }
    </li>
</ul>
