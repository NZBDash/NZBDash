@using NZBDash.Resources
<div class="navbar-default sidebar" role="navigation">
    <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
            <li class="sidebar-search">
                <div class="input-group custom-search-form">
                    <input type="text" class="form-control" placeholder="@Resources.Navbar_SearchPlaceholder">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
                <!-- /input-group -->
            </li>
            <li>
                <a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard fa-fw"></i> @Resources.Dashboard</a>
            </li>

            @{ Html.RenderAction("ApplicationMenu", "Layout"); }

            <li>
                <a href="#"  data-step="2" data-intro="You are able to configure your NZBDash settings here! Click here now."><i class="fa fa-wrench fa-fw"></i> @Resources.Settings<span class="fa arrow"></span></a>
                <ul class="nav nav-second-level">
                    <li  data-step="3" data-intro="This is where you will configure authentication for NZBDash and any other NZBDash related settings.">
                        <a href="@Url.Action("NzbDashSettings","Settings")">@Resources.Settings_NzbDash_Title</a>
                    </li>
                    <li data-step="4" data-intro="This is where you will configure any monitoring alerts for your server!">
                        <a href="@Url.Action("Index","AlertSettings")">@Resources.Settings_Alert_Title</a>
                    </li>
                    <li>
                        <a href="@Url.Action("NzbGetSettings", "Settings")">@Resources.Settings_NzbGet_Title</a>
                    </li>
                    <li>
                        <a href="@Url.Action("SabNzbSettings", "Settings")">@Resources.Settings_SabNzb_Title</a>
                    </li>
                    <li>
                        <a href="@Url.Action("SonarrSettings", "Settings")">@Resources.Settings_Sonarr_Title</a>
                    </li>
                    <li>
                        <a href="@Url.Action("CouchPotatoSettings", "Settings")">@Resources.Settings_CouchPotato_Title</a>
                    </li>
                    <li>
                        <a href="@Url.Action("PlexSettings","Settings")">@Resources.Settings_Plex_Title</a>
                    </li>
                </ul>
                <!-- /.nav-second-level -->
            </li>
        </ul>
    </div>
    <!-- /.sidebar-collapse -->
</div>
<!-- /.navbar-static-side -->
