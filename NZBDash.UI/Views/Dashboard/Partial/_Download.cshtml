@model NZBDash.UI.Models.ViewModels.Dashboard.DashboardDownloadViewModel
@{
    var url = string.Empty;
    if (Model.Application == "Sabnzbd")
    {
        url = Url.Action("Index", "Sabnzbd");
    }
    else
    {
        url = Url.Action("Index", "Nzbget");
    }
}
<div class="panel panel-primary" >
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-download fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">@Model.DownloadItems</div>
                    <div>Currently Downloading!</div>
                </div>
            </div>
        </div>
        <a href="@url">
            <div class="panel-footer">
                <span class="pull-left">View Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
